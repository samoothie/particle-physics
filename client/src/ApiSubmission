class ApiSubmission extends React.Component {
  constructor(props) {
    super(props);
    this.state = {
      lagrange: null,
    };

    this.handleSubmit = this.handleSubmit.bind(this);
  }

  handleSubmit(event) {
    event.preventDefault();

    // retrieve the mass, velocity, and position values from the form inputs or some other state variables
    const mass = 0;
    const velocity = 0;
    const position = 0;

    // send a POST request to the backend API endpoint with the mass, velocity, and position parameters
    fetch("/lagrange", {
      method: "POST",
      headers: {
        "Content-Type": "application/json",
      },
      body: JSON.stringify({ mass, velocity, position }),
    })
      .then((response) => response.json())
      .then((data) => {
        // update the state with the result returned from the API
        this.setState({ lagrange: data.lagrange });
        this.props.updateResult(data.result);
      })
      .catch((error) => {
        console.error(error);
      });
  }
}

